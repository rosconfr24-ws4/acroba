<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

 <material name="picking_grey">
  <color rgba="0.5 0.5 0.5 1.0"/>
</material>

<material name="picking_blue">
  <color rgba="0.1 0.1 0.8 1.0"/>
</material>
	<!--Obstacles Macro-->
	<!-- Cylinder macro-->
<xacro:macro name="cilindro" params="suffix length radius mass ">
	<link name = "cilindro_${suffix}">
	<visual>
		<origin xyz = "0 0 ${length*0.5}" rpy = "0 0 0" />
		<geometry>
			<cylinder length = "${length}" radius = "${radius}" />
		</geometry>
		<material name = "blue">
			<color rgba = "0.0 0.0 1.0 1.0"/>
		</material>
	</visual>
	<collision>
		<origin xyz = "0 0 ${length*0.5}" rpy = "0 0 0"/>
		<geometry>
			<cylinder length = "${length}" radius = "${radius}" />
		</geometry>
	</collision>
	<inertial>
		<origin xyz = "0 0 0" rpy = "0 0 0"/>
		<mass value="${mass}"/>
		<inertia ixx="${mass*(3*radius*radius+length*length)/12}" ixy="0.0" ixz="0.0" iyy="${mass*(3*radius*radius+length*length)/12}" iyz="0.0" izz="${mass*radius*radius/12}"/>
	</inertial>
	</link>
</xacro:macro>

<!--cuboid macro-->
<xacro:macro name = "cuboid" params = "suffix width depth height mass">
	<link name = "cuboid_${suffix}">
	<visual>
		<origin xyz = "0 0 ${height*0.5}" rpy = "0 0 0" />
		<geometry>
			<box size = "${width} ${depth} ${height}" />
		</geometry>
		<material name = "blue">
			<color rgba = "0.0 0.0 1.0 1.0"/>
		</material>
	</visual>
	<collision>
		<origin xyz = "0 0 ${height*0.5}" rpy = "0 0 0" />
		<geometry>
			<box size = "${width} ${depth} ${height}" />
		</geometry>
	</collision>
	<inertial>
		<origin xyz = "0 0 0" rpy = "0 0 0" />
		<mass value="${mass}"/>
		<inertia ixx="${mass*(2*depth*height)/12}" ixy="0.0" ixz="0.0" iyy="${mass*(2*height*width)/12}" iyz="0.0" izz="${mass*(2*depth*height)/12}"/>
	</inertial>
	</link>
</xacro:macro>

<!--cuboid invisible macro-->
<xacro:macro name = "cuboid_invisible" params = "suffix width depth height mass">
