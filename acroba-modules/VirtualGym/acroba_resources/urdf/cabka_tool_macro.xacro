<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">


   <xacro:macro name="cabka_tool" params="prefix">
    

    <link name="${prefix}tool_base_body" >
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://acroba_resources/meshes/miscellaneous/cabka_tool/cabka_tool_base.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.077 0.0" rpy="0 0 0" />
        <geometry>
            <box size="0.160 0.02 0.159"/>
        </geometry>
      </collision>
      
     <!-- unknown intertia-->
      
    </link>

    <link name="${prefix}tool_body" >
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://acroba_resources/meshes/miscellaneous/cabka_tool/cabka_slider_1.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.05 0.0" rpy="0 0 0" />
        <geometry>
            <box size="0.166 0.032 0.13"/>
        </geometry>
      </collision>
      
     <!-- unknown intertia-->
      
    </link>

    <link name="${prefix}slider_1" >
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://acroba_resources/meshes/miscellaneous/cabka_tool/cabka_slider_2.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.022 0.0" rpy="0 0 0" />
        <geometry>
            <box size="0.192 0.069 0.181"/>
        </geometry>
      </collision>
      
     <!-- unknown intertia-->
      
    </link>

    <link name="${prefix}slider_2" >
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://acroba_resources/meshes/miscellaneous/cabka_tool/cabka_tool_body.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="Grey">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 -0.005 0" rpy="0 0 0" />
        <geometry>
            <box size="0.109 0.035 0.178"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.08 0" rpy="0 0 0" />
        <geometry>
            <box size="0.094 0.114 0.11"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.164 0" rpy="1.5707 0 0" />
        <geometry>
            <cylinder radius="0.02" length="0.077"/>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 -0.235 0" rpy="1.5707 0 0" />
        <geometry>
            <cylinder radius="0.01" length="0.091"/>
        </geometry>
      </collision>
     <!-- unknown intertia-->
      
    </link>

    <joint name="${prefix}joint_base_body" type="fixed">
      <parent link="${prefix}tool_base_body" />
      <child link = "${prefix}tool_body" />
      <origin xyz="0.0 0.0 0.0 " rpy="0.0 0.0 0.0" />
    </joint>

    <joint name="${prefix}joint_slider_x" type="prismatic">
      <parent link="${prefix}tool_body" />
      <child link = "${prefix}slider_1" />
      <origin xyz="0.0 0.0 0.0 " rpy="0.0 0.0 0.0" />
      <axis xyz="1 0 0"/>
      <limit effort="50" lower="-0.048" upper="0.048" velocity="10"/>
    </joint>

    <joint name="${prefix}joint_slider_
    z" type="prismatic">
      <parent link="${prefix}slider_1" />
      <child link = "${prefix}slider_2" />
      <origin xyz="0.0 0.0 0.0 " rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1"/>
      <limit effort="50" lower="-0.048" upper="0.048" velocity="10"/>
    </joint>

    <link name="${prefix}base_tool"/>
    <joint name="${prefix}joint_base_tool" type="fixed">
      <parent link="${prefix}base_tool" />
      <child link = "${prefix}tool_base_body" />
      <origin xyz="0.0 0.0 0.087 " rpy="-1.570796 0.0 0.0" />
    </joint>

    <link name="${prefix}end_tool"/>
   <joint name="${prefix}joint_end_tool" type="fixed">
      <parent link="${prefix}slider_2" />
      <child link = "${prefix}end_tool" />
      <origin xyz="0.0 -0.280 0.0" rpy="1.570796 0.0 0.0" />
    </joint>

    <disable_collision link1="${prefix}tool_base_body" link2="${prefix}tool_body"/>
    <disable_collision link1="${prefix}slider_1" link2="${prefix}slider_2"/>
    <disable_collision link1="${prefix}slider_1" link2="${prefix}tool_body"/>
   </xacro:macro>
</robot>